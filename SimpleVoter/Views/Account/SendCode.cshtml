@model SimpleVoter.Core.ViewModels.AccountViewModels.SendCodeViewModel
@{
    ViewBag.Title = "Authentication";
}

<header class="main-header text-center">
    <h1 class="main-title no-spacing">Login Verification</h1>
    <p class="main-description">Choose authentication method.</p>
    <div class="dashboard-buttons">
        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-custom btn-white danger-hover" })
        @Html.ActionLink("Browse Polls", "ShowPublicPolls", "Polls", null, new { @class = "btn btn-custom btn-white danger-hover" })
    </div>
</header>

<section class="mid-section">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <fieldset class="setpassword-fieldset">
            @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("rememberMe", @Model.RememberMe)
                <h4>Send verification code</h4>
                <hr />
                <div class="row">
                    <div class="col-md-12">
                        Select Two-Factor Authentication Provider:
                        @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                            <input type="submit" value="Submit" class="btn btn-default authentication-method-submit" />
                    </div>
                </div>
            }
        </fieldset>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
